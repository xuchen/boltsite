---
interface Props {
  tags: string[];
  activeTag: string | null;
}

const { tags, activeTag } = Astro.props;
---

<div class="mb-8 flex flex-wrap gap-2 justify-center">
  <a 
    href="/blog" 
    class={`px-3 py-1 rounded-full text-sm ${!activeTag ? 'bg-primary text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
  >
    All
  </a>
  {tags.map(tag => (
    <a 
      href={`/blog?tag=${tag}`}
      class={`px-3 py-1 rounded-full text-sm ${activeTag === tag ? 'bg-primary text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
    >
      {tag}
    </a>
  ))}
</div>