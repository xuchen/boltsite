---
import SolutionLayout from '../layouts/SolutionLayout.astro';
import DemoForm from '../components/DemoForm.astro';

const features = [
  "Patient communication analysis",
  "Treatment plan acceptance tracking",
  "Appointment reminder optimization",
  "Patient satisfaction monitoring",
  "Staff performance insights",
  "Compliance documentation"
];
---

<SolutionLayout 
  title="Dental Practice Solutions" 
  subtitle="Enhance patient communication and boost treatment plan acceptance with AI-powered speech analytics">
  <div class="grid md:grid-cols-2 gap-12 my-16">
    <div>
      <h2 class="text-2xl font-bold mb-6">Transform Your Dental Practice</h2>
      <ul class="space-y-4">
        {features.map(feature => (
          <li class="flex items-start">
            <svg class="h-6 w-6 text-primary mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="ml-3">{feature}</span>
          </li>
        ))}
      </ul>
    </div>
    <div class="bg-gray-50 p-6 rounded-lg">
      <h2 class="text-2xl font-bold mb-4">Why Choose HealthVoiceAI</h2>
      <p class="text-gray-600 mb-4">Our specialized dental practice solution helps you improve patient communication, increase treatment acceptance rates, and build lasting patient relationships.</p>
      <p class="text-gray-600">Get insights into patient interactions, optimize appointment scheduling, and enhance overall practice efficiency.</p>
    </div>
  </div>
  <DemoForm />
</SolutionLayout>