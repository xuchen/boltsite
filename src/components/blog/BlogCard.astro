---
import type { BlogPost } from '../../data/blog-posts';

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<article class="bg-white rounded-lg shadow-sm overflow-hidden">
  <div class="p-6">
    <p class="text-sm text-gray-500">{post.date}</p>
    <h2 class="mt-2 text-xl font-semibold text-gray-900">
      <a href={`/blog/${post.slug}`} class="hover:text-primary">
        {post.title}
      </a>
    </h2>
    <p class="mt-3 text-base text-gray-500">
      {post.excerpt}
    </p>
    <div class="mt-4 flex flex-wrap gap-2">
      {post.tags.map(tag => (
        <a 
          href={`/blog?tag=${tag}`}
          class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded-full hover:bg-gray-200"
        >
          #{tag}
        </a>
      ))}
    </div>
    <div class="mt-4">
      <a href={`/blog/${post.slug}`} class="text-primary hover:text-primary-dark font-medium">
        Read more â†’
      </a>
    </div>
  </div>
</article>